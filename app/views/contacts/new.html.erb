<!-- ввод нового сообщения -->
<h1>Add new messages</h1>

<%= form_for :contact, url: contacts_path do |f| %>

	<!-- вывод списка ошибок верификации -->
	<% if @contact %>
		<i>
		<ul>
		<% @contact.errors.full_messages.each do |item| %>
			<li><%= item+'!' %></li>
		<% end %>
		</ul>
		</i>
	<% end %>
	
	<p>
		<%= f.label :email, "E-mail" %><br>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message, style: "width:100%" %>
	</p>

	<p>
		<%= f.submit 'Send message' %>
	</p>

<% end %>