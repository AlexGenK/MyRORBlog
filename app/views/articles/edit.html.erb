<!-- редактирование статьи -->
<h1>Edit article #<%= @article.id %></h1>

<% if @article.author==current_user.username %>
	<%= form_for @article do |f| %>

		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :text %><br>
			<%= f.text_area :text %>
		</p>

		<p>
			<%= f.submit %>
		</p>

	<% end %>
<% else %>
	<p>You can not edit the article. Please login.</p>
<% end %>