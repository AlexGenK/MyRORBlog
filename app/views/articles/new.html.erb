<!-- создание новой статьи -->
<h1>Add new article</h1>

<%= form_for :article, url: articles_path do |f| %>

	<!-- вывод списка ошибок верификации -->
	<% if @article %>
		<i>
		<ul>
		<% @article.errors.full_messages.each do |item| %>
			<li><%= item+'!' %></li>
		<% end %>
		</ul>
		</i>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>